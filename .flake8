[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    static/vendor

ignore = 
    E203,
    E266,
    E501,
    W503,
    W504

per-file-ignores =
    __init__.py:F401

max-complexity = 10
